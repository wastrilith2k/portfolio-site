rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'james@01webdevelopment.com';
    }

    // Portfolio data - public read, admin write
    match /portfolio/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /skills/{skillId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Legacy data access
    match /resumeData/{profileId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /linkedinData/{profileId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Allow chat conversations to be written by visitors
    match /conversations/{conversationId} {
      allow read, write: if true;
    }
  }
}